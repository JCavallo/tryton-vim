endsnippet

snippet yf
yfill="${1:1}"${2}
endsnippet

snippet yxf
yexpand="${1:1}" yfill="${2:1}"${3}
endsnippet

snippet xx
xexpand="${1:1}"${2}
endsnippet

snippet xf
xfill="${1:1}"${2}
endsnippet

snippet xxf
xexpand="${1:1}" xfill="${2:1}"${3}
endsnippet

snippet sep
